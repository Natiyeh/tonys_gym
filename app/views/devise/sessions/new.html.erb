<div class="container border" style="max-width: 300px;margin-top: 100px;">
  <div class="row">
    <div style="padding-left: 60px;padding-right: 60px;padding-top: 20px;">
      <h2 class="border-bottom rounded">Log in</h2>
      <br>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %> <br>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current_password"} %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <button type="button" class="form-actions btn btn-primary">
            <%= f.button :submit, "Log In" %>
          </button>
        <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

